<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2" ><br>
    <h3>Create a new listing</h3>
    <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="listing[title]" id="" placeholder="enter title" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required name="listing[description]" id=""  class="form-control"></textarea>
        </div> 

        <!-- <div class="mb-3">
            <label for="imageUrl" class="form-label">Image link</label>
            <input   type="text" name="listing[imageUrl]" id="" placeholder="enter imagUrl" class="form-control">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div> -->

        <div class="mb-3">
            <label for="imageUrl" class="form-label">Upload Image</label>
            <input type="file" name="listing[imageUrl]" id="" class="form-control">
            <div class="valid-feedback">
                Looks good!
            </div>
            required
        </div>

        <!-- ... -->

        
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input required type="number" name="listing[price]" id="" placeholder="enter price" class="form-control">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input required type="text" name="listing[location]" id="" placeholder="enter your location" class="form-control">
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid city.
                </div>
            </div>
            
            <div class="mb-3 col-md-4">
                <label for="country" class="form-label">Country</label>
                <input required type="text" name="listing[country]" id="" placeholder="enter your country" class="form-control">
            </div>
        </div>
        
        <br>

        <button class="btn btn-add ">Add</button> <br><br>
    </form>
  </div>
</div>
 