<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2" ><br>
    <h3>Create a new listing</h3>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="post"  class="needs-validation" novalidate enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="listing[title]" id="" class="form-control" value="<%=listing.title%>">
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" class="form-control"><%=listing.description%></textarea>
        </div>

        <div class="mb-3">
            <p>Original Listing Image</p>
            <img src="<%=originalImageUrl%>" alt="">
        </div>
 
        <div class="mb-3">
            <label for="imageUrl" class="form-label">Upload New Image </label>
            <input type="file" name="listing[imageUrl]" id="" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" id="" class="form-control" value="<%=listing.price%>">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" class="form-control" id="" value="<%=listing.location%>">
            </div>
            
            <div class="mb-3 col-md-4">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" id="" class="form-control" value="<%=listing.country%>">
            </div>
        </div>
        
        <br>

        <button class="btn btn-add ">Edit</button> <br><br>
    </form>
  </div>
</div>





 